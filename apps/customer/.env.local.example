# Customer PWA Environment Variables

# App Configuration
NEXT_PUBLIC_APP_NAME="Tabsy Customer"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_ENV="development"

# API Configuration
NEXT_PUBLIC_API_BASE_URL="http://localhost:5001/api/v1"
NEXT_PUBLIC_WS_BASE_URL="ws://localhost:5001"

# Restaurant Configuration
NEXT_PUBLIC_DEFAULT_RESTAURANT_ID=""

# PWA Configuration
NEXT_PUBLIC_PWA_ENABLED=true
NEXT_PUBLIC_PUSH_NOTIFICATIONS_ENABLED=false

# Payment Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""
NEXT_PUBLIC_PAYMENT_METHODS_ENABLED="card,apple_pay,google_pay"

# QR Code Configuration
NEXT_PUBLIC_QR_CODE_BASE_URL="https://tabsy.app/scan"

# Analytics Configuration
NEXT_PUBLIC_ANALYTICS_ENABLED=false
NEXT_PUBLIC_GA_MEASUREMENT_ID=""

# Feature Flags
NEXT_PUBLIC_FEATURES_OFFLINE_MODE=true
NEXT_PUBLIC_FEATURES_SPLIT_BILL=true
NEXT_PUBLIC_FEATURES_DIETARY_FILTERS=true
NEXT_PUBLIC_FEATURES_REVIEWS=true
NEXT_PUBLIC_FEATURES_LOYALTY=false

# Debug Configuration
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_SHOW_DEV_TOOLS=true
