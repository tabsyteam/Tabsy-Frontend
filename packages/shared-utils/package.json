{
  "name": "@tabsy/shared-utils",
  "version": "1.0.0",
  "description": "Shared utility functions and helpers for the Tabsy platform",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./formatting/currency": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "date-fns": "^3.6.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@tabsy/shared-types": "workspace:*",
    "@types/node": "^20.12.7",
    "tsup": "^8.1.0",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
