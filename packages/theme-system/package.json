{
  "name": "@tabsy/theme-system",
  "version": "1.0.0",
  "description": "Unified theme system for Tabsy applications",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "tsup": "^8.5.0",
    "typescript": "^5.4.5"
  },
  "publishConfig": {
    "access": "restricted"
  }
}